function npcTalk(p: player, t: text, s: text, prevSound: text):
	send "%{_t}%" to {_p}
	if {_prevSound} is set:
		stop sound "%{_prevSound}%" for {_p}
	play sound "%{_sound}%" at {_p} for {_p}
	